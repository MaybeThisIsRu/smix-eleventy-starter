---yaml
permalink: "/feed.xml"
eleventyExcludeFromCollections: true
metadata:
  title: "Articles, notes, replies, and photos by/from Site Name"
  subtitle: "Site description/subtitle"
  url: "http://localhost:8080"
  author:
    name: "Site author"
    email: "Email"
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
    <title>{{ metadata.title }}</title>
    <subtitle>{{ metadata.subtitle }}</subtitle>
    <link href="{{ permalink | absoluteUrl(config.siteBaseUrl + '/') }}" rel="self"/>
    <link href="{{ metadata.url }}"/>
    <id>{{ metadata.url }}</id>
    <author>
        <name>{{ metadata.author.name }}</name>
        <email>{{ metadata.author.email }}</email>
    </author>
    {% set collectionSize = collections.primary.length %}
    {% if collectionSize %}
    <updated>{{ collections.primary | rssLastUpdatedDate }}</updated>
    {% for post in collections.primary %}
    {% set absolutePostUrl %}{{ post.url | absoluteUrl(config.siteBaseUrl) }}{% endset %}
    <entry>
        {% if post.data.title %}
        <title>{{ post.data.title }}</title>
        {% endif %}
        <link href="{{ absolutePostUrl }}"/>
        <updated>{% if post.data.updated %}{{ post.data.updated | dateInISO8601 }}{% else %}{{ post.date | dateInISO8601 }}{% endif %}</updated>
        <id>{{ absolutePostUrl }}</id>
        <content type="html">
            {% if post.data.photo %}
            <![CDATA[
    {% for photo in post.data.photo %}
    <img src="{{ photo.src | absoluteUrl(config.siteBaseUrl + '/images/') }}" alt="{{ photo.alt }}">
    {% endfor %}
    {{ post.templateContent | htmlToAbsoluteUrls(config.siteBaseUrl + '/') | safe }}
]]>
            {% else %}
            <![CDATA[
    {{ post.templateContent | htmlToAbsoluteUrls(config.siteBaseUrl + '/') | safe }}
]]>
            {% endif %}
        </content>
    </entry>
    {% endfor %}
    {% endif %}
</feed>
